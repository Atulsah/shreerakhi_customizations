 "font_size": 14,
 "html": "<style>\r\n/* same styling as before: cream + almond, 2-column, 200x200 images, pagination */\r\nbody { font-family: Arial, sans-serif; }\r\n.catalogue-page { page-break-after: always; width: 100%; }\r\n.catalogue-header { background:#eed9c4; text-align:center; padding:10px; font-weight:bold; margin-bottom:20px; border-radius:4px; }\r\n.catalogue-container { display:flex; flex-wrap:wrap; justify-content:space-between; }\r\n.catalogue-card { width:48%; background:#fdf6e3; padding:10px; margin-bottom:20px; border-radius:8px; text-align:center; box-sizing:border-box; }\r\n.catalogue-card img { width:200px; height:200px; object-fit:contain; margin-bottom:10px; }\r\n.catalogue-card h4{ margin:5px 0; font-size:16px; }\r\n.catalogue-card p{ margin:3px 0; font-size:14px; }\r\n</style>\r\n\r\n{% set counter = 0 %}\r\n{% set items_per_page = 4 %}\r\n{% for item in doc %}\r\n    {% set available_qty = item.available_qty if item.available_qty is not none else (item.actual_qty if item.actual_qty is not none else 0) %}\r\n    {% if (item.item_group == 'Semi Finish Goods - 0%' and available_qty > 5000) or (item.item_group == 'Finish Goods - 0%' and available_qty > 25) %}\r\n\r\n        {% if counter % items_per_page == 0 %}\r\n        <div class=\"catalogue-page\">\r\n            <div class=\"catalogue-header\">Customer Item Catalogue</div>\r\n            <div class=\"catalogue-container\">\r\n        {% endif %}\r\n\r\n        <div class=\"catalogue-card\">\r\n            {% if item.image %}\r\n                <img src=\"{{ item.image }}\" alt=\"{{ item.item_name }}\">\r\n            {% else %}\r\n                <div style=\"width:200px;height:200px;line-height:200px;background:#eee;margin:auto;\">No Image</div>\r\n            {% endif %}\r\n            <h4>{{ item.item_name }}</h4>\r\n            <p><strong>Code:</strong> {{ item.item_code }}</p>\r\n            <p><strong>Group:</strong> {{ item.item_group }}</p>\r\n            <p><strong>Available Qty:</strong> {{ available_qty }}</p>\r\n            <p><strong>UOM:</strong> {{ item.stock_uom }}</p>\r\n            <p><strong>Price:</strong> {{ item.selling_price or '-' }}</p>\r\n        </div>\r\n\r\n        {% set counter = counter + 1 %}\r\n        {% if counter % items_per_page == 0 %}\r\n            </div>\r\n        </div>\r\n        {% endif %}\r\n\r\n    {% endif %}\r\n{% endfor %}\r\n\r\n{% if counter % items_per_page != 0 %}\r\n    </div>\r\n</div>\r\n{% endif %}\r\n",
